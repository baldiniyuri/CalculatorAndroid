<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_calculations"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:singleLine="true" />

<!--Definindo o visor-->
    <TextView
        android:id="@+id/txt_resuls"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxLines="1"/>

<!-- Definindo os dois primeiros botões-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear"
            style="@style/Operator_Button"
            android:layout_weight="3"
            android:text="C"
            />

        <Button
            android:id="@+id/division"
            style="@style/Operator_Button"
            android:text="/"
            />

    </LinearLayout>

<!--    Container dos números 7 a 9 e operador x    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/number_7"
            style="@style/Numbers"
            android:text="7"
            />

        <Button
            android:id="@+id/number_8"
            style="@style/Numbers"
            android:text="8"
            />

        <Button
            android:id="@+id/number_9"
            style="@style/Numbers"
            android:text="9"
            />

        <Button
            android:id="@+id/multiplication"
            style="@style/Operator_Button"
            android:text="x"
            />

    </LinearLayout>

<!--    Container dos números 4 a 6 e operador +-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/number_4"
            style="@style/Numbers"
            android:text="4"
            />

        <Button
            android:id="@+id/number_5"
            style="@style/Numbers"
            android:text="5"
            />

        <Button
            android:id="@+id/number_6"
            style="@style/Numbers"
            android:text="6"
            />

        <Button
            android:id="@+id/sum"
            style="@style/Operator_Button"
            android:text="+"
            />

    </LinearLayout>

<!--    Container dos números 1 a 3 e operador - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/number_1"
            style="@style/Numbers"
            android:text="1"
            />

        <Button
            android:id="@+id/number_2"
            style="@style/Numbers"
            android:text="2"
            />

        <Button
            android:id="@+id/number_3"
            style="@style/Numbers"
            android:text="3"
            />

        <Button
            android:id="@+id/sub"
            style="@style/Operator_Button"
            android:text="-"
            />

    </LinearLayout>

<!--    Container do .float, zero, backspace e igual-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dot"
            style="@style/Numbers"
            android:text="."
            />

        <Button
            android:id="@+id/number_0"
            style="@style/Numbers"
            android:text="0"
            />

        <ImageView
            android:id="@+id/backspace"
            style="@style/Numbers"
            android:src="@drawable/backspace_edited"

            />

        <Button
            android:id="@+id/equal"
            style="@style/Operator_Button"
            android:text="="
            />

    </LinearLayout>

</LinearLayout>